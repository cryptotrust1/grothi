# Database
DATABASE_URL="postgresql://grothi:YOUR_PASSWORD@localhost:5432/grothi"

# Redis (for BullMQ - Phase 3)
REDIS_URL="redis://localhost:6379"

# Auth
NEXTAUTH_URL="https://grothi.com"
NEXTAUTH_SECRET="generate-with: openssl rand -base64 32"

# Stripe
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_..."
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# Encryption key for API keys in DB (64-char hex)
# Generate with: openssl rand -hex 32
ENCRYPTION_KEY="generate-with-openssl-rand-hex-32"

# Anthropic API Key (for Claude Vision AI captions)
ANTHROPIC_API_KEY="sk-ant-..."

# Replicate API Token (for AI image & video generation)
# Get your token at: https://replicate.com/account/api-tokens
# Pricing: ~$0.04/image (Flux 1.1 Pro), ~$0.25/video (Minimax video-01-live)
REPLICATE_API_TOKEN="r8_..."

# RunwayML API Secret (alternative video generation provider)
# Get your key at: https://app.runwayml.com/settings/api-keys
# Optional if REPLICATE_API_TOKEN is set (Replicate is used as fallback)
RUNWAYML_API_SECRET="key_..."

# Google Analytics (optional - for tracking website usage)
# Get your Measurement ID at: https://analytics.google.com
#NEXT_PUBLIC_GA_MEASUREMENT_ID="G-XXXXXXXXXX"

# Facebook OAuth (for one-click Facebook Page connection)
# Get these from: Meta Developer Console > Your Facebook App > Settings > Basic
#
# Required OAuth Redirect URI (add in Meta Developer Console > Facebook Login > Settings):
#   https://grothi.com/api/oauth/facebook/callback
#
# Required permissions (request via App Review for production):
#   pages_show_list, pages_read_engagement, pages_manage_posts, read_insights
FACEBOOK_APP_ID="your-facebook-app-id"
FACEBOOK_APP_SECRET="your-facebook-app-secret"

# Instagram OAuth (for one-click Instagram Business connection)
# Uses a SEPARATE Instagram App (not the same as Facebook App).
# Get these from: Meta Developer Console > Your Instagram App > Instagram > Basic Display
#
# Required OAuth Redirect URI (add in Meta Developer Console > Instagram > Business Login):
#   https://grothi.com/api/oauth/instagram/callback
#
# Required permissions:
#   instagram_business_basic, instagram_business_content_publish
INSTAGRAM_APP_ID="your-instagram-app-id"
INSTAGRAM_APP_SECRET="your-instagram-app-secret"

# X (Twitter) OAuth 2.0 (for one-click platform connection)
TWITTER_CLIENT_ID="your-twitter-oauth2-client-id"
TWITTER_CLIENT_SECRET="your-twitter-oauth2-client-secret"

# LinkedIn OAuth 2.0 (for one-click platform connection)
LINKEDIN_CLIENT_ID="your-linkedin-client-id"
LINKEDIN_CLIENT_SECRET="your-linkedin-client-secret"

# TikTok OAuth 2.0 (for one-click platform connection)
TIKTOK_CLIENT_KEY="your-tiktok-client-key"
TIKTOK_CLIENT_SECRET="your-tiktok-client-secret"

# Pinterest OAuth 2.0 (for one-click platform connection)
PINTEREST_APP_ID="your-pinterest-app-id"
PINTEREST_APP_SECRET="your-pinterest-app-secret"

# YouTube / Google OAuth 2.0 (for one-click platform connection)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Threads OAuth 2.0 (for one-click platform connection)
# Uses the SAME Meta App as Facebook/Instagram (same App ID and Secret).
# Add the "Threads" product to your Meta app in the Developer Console.
#
# Required OAuth Redirect URI (add in Meta Developer Console > Threads > Settings):
#   https://grothi.com/api/oauth/threads/callback
#
# Required permissions: threads_basic, threads_content_publish
THREADS_APP_ID="your-threads-app-id"
THREADS_APP_SECRET="your-threads-app-secret"

# Cron Job Secret (protects /api/cron/* endpoints from unauthorized calls)
# Generate with: openssl rand -base64 32
# Used by: process-posts, collect-engagement, health-check cron endpoints
# If not set, cron endpoints accept all requests (NOT recommended for production)
CRON_SECRET="generate-with-openssl-rand-base64-32"

# Email (SMTP for sending transactional emails)
# You can use any SMTP provider (WebSupport, Brevo, SendGrid, etc.)
SMTP_HOST="smtp.m1.websupport.sk"
SMTP_PORT=587
SMTP_USER="noreply@grothi.com"
SMTP_PASS="your-smtp-password"
EMAIL_FROM="Grothi <noreply@grothi.com>"
CONTACT_NOTIFY_EMAIL="support@grothi.com"

# Email Webhook Secret (optional - for verifying bounce/complaint webhooks from SendGrid, Postmark, SES, etc.)
#EMAIL_WEBHOOK_SECRET="your-webhook-secret"
